<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_function_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_function_config"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_unit_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_unit_config"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_goal_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_dnd_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_dnd_config"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_raisewakeup_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_raisewakeup_config"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_all"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取所有配置"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_device_info"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取设备信息"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>