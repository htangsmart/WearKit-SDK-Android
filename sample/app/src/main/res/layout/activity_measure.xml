<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical">

    <com.github.kilnn.tool.widget.item.PreferenceItem
        android:id="@+id/item_heartrate"
        style="@style/Widget.Sample.PreferenceView.Item.Text"
        app:preferenceTitle="@string/heartRate_measure"/>

    <com.github.kilnn.tool.widget.item.PreferenceItem
        android:id="@+id/item_bloodOxygen"
        style="@style/Widget.Sample.PreferenceView.Item.Text"
        app:preferenceTitle="@string/bloodOxygen_measure"/>

    <com.github.kilnn.tool.widget.item.PreferenceItem
        android:id="@+id/item_pressure"
        style="@style/Widget.Sample.PreferenceView.Item.Text"
        app:preferenceTitle="@string/pressure_measure"/>

</LinearLayout>