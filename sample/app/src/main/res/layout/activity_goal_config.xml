<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_step"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_step"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_distance"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_distance"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_calories"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_calories"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_duration"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_duration"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_number"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_number"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_sport_duration"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/activity_goal_sport_duration"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取目标配置"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>