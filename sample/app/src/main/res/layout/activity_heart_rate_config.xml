<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_monitor_config"
                style="@style/Widget.Sample.PreferenceView.Item.Switch"
                app:preferenceTitle="@string/ds_heart_rate_monitor"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_start"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_start_time"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_end"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_end_time"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_interval"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_interval_time"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_alarm_exercise"
                style="@style/Widget.Sample.PreferenceView.Item.Switch"
                app:preferenceTitle="@string/ds_heart_rate_alarm_exercise"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_exercise_min"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_min_value"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_exercise_max"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_max_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_alarm_resting"
                style="@style/Widget.Sample.PreferenceView.Item.Switch"
                app:preferenceTitle="@string/ds_heart_rate_alarm_resting"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_resting_min"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_min_value"/>

            <com.github.kilnn.tool.widget.item.PreferenceItem
                android:id="@+id/item_resting_max"
                style="@style/Widget.Sample.PreferenceView.Item.Text"
                app:preferenceTitle="@string/ds_config_max_value"/>

        </LinearLayout>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_threshold"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_heart_rate_threshold"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取心率配置"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>