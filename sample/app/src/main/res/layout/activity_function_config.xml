<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_wear_hand"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_wear_hand"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_time_format"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_time_format"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_weather"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_weather"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_health_enhanced"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_health_enhanced"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取功能配置"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>