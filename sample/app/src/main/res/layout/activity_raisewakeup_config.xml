<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_config"
            style="@style/Widget.Sample.PreferenceView.Item.Switch"
            app:preferenceTitle="@string/ds_raisewakeup_config"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_start"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_config_start_time"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_end"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="@string/ds_config_end_time"/>

        <com.github.kilnn.tool.widget.item.PreferenceItem
            android:id="@+id/item_pb_test_get_config"
            style="@style/Widget.Sample.PreferenceView.Item.Text"
            app:preferenceTitle="获取抬腕亮屏配置"/>

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>